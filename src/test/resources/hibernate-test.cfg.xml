<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>

        <property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>
        <property name="hibernate.connection.driver_class">org.h2.Driver</property>
        <property name="hibernate.connection.url">jdbc:h2:mem:testdb;DB_CLOSE_DELAY=-1</property>
        <property name="hibernate.hbm2ddl.auto">create-drop</property>
        <property name="show_sql">false</property>

        <!-- ВАЖНО: всичките ти ентити-та -->
        <mapping class="com.transportcompany.entity.Client"/>
        <mapping class="com.transportcompany.entity.Employee"/>
        <mapping class="com.transportcompany.entity.Transport"/>
        <mapping class="com.transportcompany.entity.Vehicle"/>
        <mapping class="com.transportcompany.entity.Price"/>
        <mapping class="com.transportcompany.entity.Ticket"/>
        <mapping class="com.transportcompany.entity.TransportCompany"/>
        <mapping class="com.transportcompany.entity.DriverQualification"/>
        <mapping class="com.transportcompany.entity.VehicleType"/>

    </session-factory>
</hibernate-configuration>